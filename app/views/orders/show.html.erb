<div class="row">
   <div class="col-md-12">
 
    <h2> 訂單明細 </h2>
 
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">商品明細</th>
          <th>單價</th>
          <th>數量</th>
          <th>總價</th>
        </tr>
      </thead>
      <tbody>
        <% @order.items.each do |product| %>
        <tr>
          <td>           
            <%= link_to(product.product_name, admin_product_path(product)) %>
          </td>
          <td> <%= product.price %> </td>
          <td> <%= product.quantity %> </td>
          <td> <%= render_order_item_total_price(product) %> </td>
        </tr>
        <% end %>
 
      </tbody>
    </table>
 
    <div class="total group">
      <span class="pull-right">
       <span> 總計 <%= @order.total %> NTD  
       </span>
     </div>
 
     <hr>
 
     <h2> 寄送資訊 </h2>
 
     <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td> 訂購人 </td>
 
        </tr>
 
        <tr>
          <td> 
            <%= @order_info.billing_name %> - <%= @order_info.billing_address %>
          </td>
        </tr>
 
        <tr>
          <td> 訂購人 </td>
 
        </tr>
 
        <tr>
          <td> 
            <%= @order_info.billing_name %> - <%= @order_info.billing_address %>
          </td>
        </tr>
 
      </tbody>
 
    </table>
 
 
    <% if !@order.paid? %>
 
    <div class="pull-right">
      <%= link_to "我的所有訂單", account_orders_path, :class => "btn btn-primary" %>
      <%= link_to("以信用卡付款", pay_with_credit_card_order_path(@order.token), :class => "btn btn-lg btn-danger ") %>
      <%= link_to("以 ATM 付款", "#", :class => "btn btn-lg btn-danger ") %>
    </div>
 
    <% else %>
    
    <div class="pull-right">
    <p>此訂單已完成付款&nbsp;<%= link_to "我的所有訂單", account_orders_path, :class => "btn btn-primary" %></p>
    </div>
 
    <% end %>
 
 
 
 
  </div>
 
 
</div>