<div class="row">
	<div class="col-md-12"><span class="page_title">後台管理</span><%= link_to "新產品", new_admin_product_path, :class=> "btn btn-primary", :style => "margin-left: 20px; width: 80px" %><div>
</div>
<% if flash.any? %>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<% end %>

<hr/>

<div class="row">
<% @product.each do |product| %>
<div class="col-md-3 product_item">
	<div class="product_image_container">
		<%= image_tag product.default_image.image_url(:thumb).to_s if product.default_image.present? %>
	</div>
<h4 style="text-align:center"><%= link_to product.title, admin_product_path(product) %></h4>
<p style="text-align:center">剩餘 <%= product.quantity %> 件 | <%= link_to "編輯", edit_admin_product_path(product) %> | <%= link_to "刪除", admin_product_path(product), method: :delete, data: {confirm: "確定嗎？"} %></p>
</div>

<% end %>
</div>